# .env.example
# Copie este arquivo para .env e preencha os valores reais

# ==========================================
# 1. Configurações de Ambiente e Admin
# ==========================================
# Configurações de ambiente (development, production)
ENV=development

# Senha para acessar o painel de ferramentas de desenvolvedor (DevTools)
# Usado em: lib/view/dev_tools_view.dart
DB_ADMIN_PASSWORD=seu_password_devtools_aqui

# Email do administrador para redirecionamento específico no login
# Usado em: lib/view/login_view.dart
ADMIN_EMAIL=sua_email_admin_aqui #exemplo@email.com

# Telefone padrão do administrador (WhatsApp) caso não esteja no Firestore
# Usado em: lib/controller/firestore_service.dart
WHATSAPP_ADMIN=5511987654321


# ==========================================
# 2. Firebase - Configuração Geral
# ==========================================
# Usado em: lib/firebase_options.dart
FIREBASE_PROJECT_ID=SEU_PROJECT_ID_AQUI
FIREBASE_MESSAGING_SENDER_ID=SEU_SENDER_ID_AQUI
FIREBASE_STORAGE_BUCKET=SEU_PROJECT_ID.firebasestorage.app

# ==========================================
# 3. Firebase - Web
# ==========================================
FIREBASE_WEB_API_KEY=SUA_API_KEY_WEB_AQUI
FIREBASE_WEB_APP_ID=SEU_APP_ID_WEB_AQUI
FIREBASE_WEB_AUTH_DOMAIN=SEU_PROJECT_ID.firebaseapp.com

# Chave VAPID para identificação do servidor de push na Web
# Usado em: main.dart
VAPID_KEY=sua_vapid_key_aqui

# Chave do Google reCAPTCHA para Firebase App Check na Web
# Usado em: main.dart
RECAPTCHA_SITE_KEY=sua_recaptcha_site_key

# ==========================================
# 4. Firebase - Android
# ==========================================
FIREBASE_ANDROID_API_KEY=SUA_API_KEY_ANDROID_AQUI
FIREBASE_ANDROID_APP_ID=SEU_APP_ID_ANDROID_AQUI

# ==========================================
# 5. Firebase - iOS
# ==========================================
FIREBASE_IOS_API_KEY=SUA_API_KEY_IOS_AQUI
FIREBASE_IOS_APP_ID=SEU_APP_ID_IOS_AQUI
FIREBASE_IOS_CLIENT_ID=SEU_IOS_CLIENT_ID_AQUI
FIREBASE_IOS_BUNDLE_ID=com.example.app

# ==========================================
# 6. Firebase - Cloud Messaging (Legacy/Server)
# ==========================================
# Chave do servidor para envio de notificações via HTTP v1/Legacy
# Usado em: lib/controller/firestore_service.dart
FCM_SERVER_KEY=sua_server_key_aqui

# ==========================================
# 7. Integrações Externas (JSONBin, etc)
# ==========================================
# Chaves para a API do JSONBin.io (Exportação Web)
# Usado em: lib/view/dev_tools_view.dart
X_ACCESS_API_KEY=sua_api_key_jsonbin
X_MASTER_API_KEY=sua_master_key_jsonbin
ACCESS_KEY_ID=sua_access_key_id

# ==========================================
# 8. Banco de Dados Secundário (PostgreSQL - Opcional)
# ==========================================
PG_PASSWORD=sua_senha_postgres
DB_NAME=seu_banco_de_dados_aqui
DB_USER=postgres
DB_HOST=127.0.0.1
DB_PORT=sua_porta_postgres


# ==========================================
# 9. Configurações de Teste / Mocks
# ==========================================
# Chaves utilizadas para mockar a inicialização do Firebase em testes
# Usado em: test/dev_tools_view_test.dart
FIREBASE_API_KEY=sua_api_key_firebase
FIREBASE_APP_ID=seu_app_id_firebase

# ==========================================
# 10. Outros
# ==========================================
BACKEND_URL=http://localhost:3000
warranty_app=sua_warranty_app_aqui